<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="TeatroMigliorato" transaction-type="RESOURCE_LOCAL">
		<class>java_bean.Spettatori</class>
		<class>java_bean.Gruppo</class>
		<class>java_bean.Biglietto</class>
		<class>java_bean.Posto</class>
		<class>java_bean.Spettacolo</class>
		<class>java_bean.MasterEntity</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mariadb://127.0.0.1/teatroMigliorato"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MariaDB53Dialect"/>
		</properties>
	</persistence-unit>
</persistence>
